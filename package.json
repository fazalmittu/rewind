{
  "name": "workflow-recorder",
  "version": "1.0.0",
  "description": "Vision-only workflow recorder for browser applications",
  "scripts": {
    "dev": "bun --watch backend/index.ts",
    "build:extension": "bun run scripts/build-extension.ts",
    "watch:extension": "bun run scripts/build-extension.ts --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "openai": "^6.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.32",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "sharp": "^0.34.5"
  }
}
